{
  "name": "vue-monopoly",
  "version": "0.2.0",
  "type": "module",
  "private": true,
  "scripts": {
    "client:dev": "cd client && npm run serve",
    "client:build": "cd client && npm run build",
    "server:dev": "nodemon server/server.js",
    "start": "node server/server.js",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "lint": "eslint . --ext .js,.vue",
    "lint:fix": "eslint . --ext .js,.vue --fix",
    "test": "jest",
    "simulate": "node server/simulation.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "eslint": "^8.48.0",
    "eslint-plugin-vue": "^9.17.0",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {}
  }
}
